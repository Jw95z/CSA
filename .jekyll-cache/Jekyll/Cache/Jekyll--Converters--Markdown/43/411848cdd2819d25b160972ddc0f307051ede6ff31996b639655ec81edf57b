    <script>
        function add(char) {
            var display = document.getElementById('a');
            display.value = display.value + char;
        }
        function calculate() {
            var display = document.getElementById('a');
            var result = eval(display.value); 
            document.getElementById('b').value = result;
        }
        function reset() {
            document.getElementById('a').value = "";
            document.getElementById('b').value = "";
        }
    </script>
